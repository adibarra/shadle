{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": [
      "vitest",
      "vite/client",
      "vite-plugin-pwa/client",
      "unplugin-vue-macros/macros-global",
      "unplugin-vue-router/client"
    ]
  },
  "vueCompilerOptions": {
    "plugins": [
      "unplugin-vue-macros/volar"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "tests/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
