# environment: 'prod' or 'dev'
NODE_ENV='prod'

# ----------------------------------------------------------------------------------------------------
# server package configuration
# ----------------------------------------------------------------------------------------------------

# host for the api server
API_HOST='0.0.0.0'

# port for the api server (recommended 3332 in dev)
API_PORT=80

# regex pattern for allowed cors origins (for production, adjust to your domain only)
API_CORS_ORIGIN_REGEX='^https?://(?:127\.0\.0\.1|localhost|(?:[\w-]+\.)?example\.com)(?::\d{1,5})?$'

# main postgresql database connection string
POSTGRES_URL='postgresql://postgres:password@postgres:5432/shadle'

# test database connection string
POSTGRES_TEST_URL='postgresql://postgres:password@localhost:5432/shadle_test'

# salt for daily puzzle generation (change this to randomize daily puzzles)
PUZZLE_SALT='default-salt'

# ----------------------------------------------------------------------------------------------------
# leave LOG_LEVEL_s blank to use defaults
# logging levels (options: 'fatal', 'error', 'warn', 'info', 'debug', 'trace', 'silent')
# ----------------------------------------------------------------------------------------------------

# logging level for console output
LOG_LEVEL_CONSOLE=

# logging level for file output
LOG_LEVEL_FILE=

# minimum logging level across all outputs
LOG_LEVEL_MIN=

# ----------------------------------------------------------------------------------------------------
# docker compose postgresql configuration
# ----------------------------------------------------------------------------------------------------

# postgresql database name
POSTGRES_DB='shadle'

# postgresql username
POSTGRES_USER='postgres'

# postgresql password
POSTGRES_PASSWORD='password'
