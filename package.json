{
  "name": "shadle",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.22.0",
  "description": "A Wordle-style game for colors with PWA and notifications.",
  "contributors": [
    "adibarra <github@adibarra.com> (https://adibarra.com)"
  ],
  "scripts": {
    "build": "pnpm --parallel --color run build",
    "clean": "pnpm --parallel run clean",
    "clean:all": "[ -f .env ] && mv .env .env.backup; pnpm --parallel run clean:all && git clean -fdX; [ -f .env.backup ] && mv .env.backup .env",
    "dev": "pnpm --parallel --color run dev",
    "dev:client": "pnpm --filter @shadle/client run dev",
    "dev:core": "SKIP_TASKS=true pnpm --parallel --color run dev",
    "dev:server": "pnpm --filter @shadle/server run dev",
    "lint": "eslint . --cache; exit 0",
    "lint:fix": "eslint . --fix --cache; exit 0",
    "preview": "pnpm run build && ./scripts/prepare-preview.sh && NODE_ENV=PREVIEW pnpm --filter @shadle/server run start",
    "start": "pnpm --filter @shadle/server run start",
    "taze": "taze -r -I",
    "test": "NODE_ENV=test pnpm --parallel --color run test",
    "check": "pnpm --parallel run check"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.0.2",
    "taze": "^19.9.0",
    "typescript": "^5.9.3"
  }
}
